<Window x:Class="DDEvernote.WPF.Views.Windows.CreateCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDEvernote.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="Новая категория" Height="150" Width="200">
    <StackPanel>
        <TextBlock Text="Название:" FontSize="16" FontWeight="Bold" />
        <TextBox x:Name="categoryName" FontSize="16"/>
        <Button x:Name="createCategoryBtn" Content="Создать" FontSize="16" Click="createCategoryBtn_Click"/>
    </StackPanel>
</Window>
