<Window x:Class="DDEvernote.WPF.Views.Windows.CreateCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDEvernote.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="Новая категория" Height="200" Width="300" ResizeMode="NoResize">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="Название:" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
        <TextBox x:Name="categoryName" FontSize="16"/>
        <Button x:Name="createCategoryBtn" Margin="0,5,0,0" Content="Создать категорию" FontSize="16" Click="createCategoryBtn_Click"/>
    </StackPanel>
</Window>
