<Window x:Class="DDEvernote.WPF.Views.Windows.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DDEvernote.WPF.Views.Windows"
        mc:Ignorable="d"
        Title="EditUserWindow" Height="300" Width="300">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Имя: "/>
            <TextBox x:Name="userName" Text="{Binding EditableUser.Name, Mode=OneWay}" Height="20" Width="100"/>
            <TextBlock x:Name="errMessage" Visibility="Collapsed" Text="Такое имя уже занято"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Пароль: "/>
            <PasswordBox x:Name="userPassword" Height="20" Width="100"/>            
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="saveChangedBtn" Content="Сохранить изменения" Click="saveChangedBtn_Click"/>
            <Button x:Name="cancelChangedBtn" Content="Отмена" Click="cancelChangedBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
